{
    "manifest_version": 2,
    "name": "Github Markdown Nav",
    "description": "Generate Navigation Tree for Markdown on Github",
    "version": "1.0",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "content_scripts": [
        {
          "matches": ["*://github.com/*"],
          "css": ["libs/jquery-ui.min.css", "style.css"],
          "js": ["libs/jquery.min.js", "libs/jquery-ui.min.js", "content.js"]  
        }

    ],
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}